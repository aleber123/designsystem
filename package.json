    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vueuse/components": "^12.0.0",
    "@vueuse/core": "^12.0.0",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "sass": "^1.82.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vitest": "^2.1.8",
    "vue-router": "^4.5.0",
    "vue-tsc": "^2.1.10"
